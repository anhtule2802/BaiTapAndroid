<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lvList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="377dp"
        android:layout_height="23dp"
        android:background="@android:color/holo_green_dark"
        android:text="Quản lý nhân viên"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="16dp"
        android:text="Mã nhân viên"
        app:layout_constraintBottom_toBottomOf="@+id/editMa"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="16dp"
        android:text="Tên nhân viên"
        app:layout_constraintBottom_toBottomOf="@+id/editTen"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editMa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Vui lòng nhập thông tin"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTen"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Vui lòng nhập thông tin"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/rdTV"
        app:layout_constraintStart_toStartOf="@+id/rdTV"
        app:layout_constraintTop_toBottomOf="@+id/editMa" />

    <RadioButton
        android:id="@+id/rdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="29dp"
        android:text="Thời Vụ"
        app:layout_constraintBottom_toTopOf="@+id/btnNhap"
        app:layout_constraintEnd_toEndOf="@+id/btnNhap" />

    <RadioButton
        android:id="@+id/rdCT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="60dp"
        android:text="Chính Thức"
        app:layout_constraintBottom_toTopOf="@+id/btnNhap"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <Button
        android:id="@+id/btnNhap"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="62dp"
        android:text="Nhập NV"
        app:layout_constraintEnd_toEndOf="@+id/_dynamic"
        app:layout_constraintStart_toStartOf="@+id/rdCT"
        app:layout_constraintTop_toBottomOf="@+id/editTen" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNhap" />

</android.support.constraint.ConstraintLayout>