<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/holo_green_dark"
        android:text="Đăng nhập hệ thống"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/editTK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Tài Khoản"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTK"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:text="Tài Khoản"
        app:layout_constraintBottom_toBottomOf="@+id/editTK2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTK2" />

    <EditText
        android:id="@+id/editTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Không được bỏ trống"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTK2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Không được bỏ trống"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTK"
        app:layout_constraintTop_toBottomOf="@+id/editTK" />

    <CheckBox
        android:id="@+id/cbLuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Lưu Thông Tin"
        app:layout_constraintStart_toStartOf="@+id/editTK2"
        app:layout_constraintTop_toBottomOf="@+id/editTK2" />

    <Button
        android:id="@+id/btnDN"
        android:layout_width="251dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="16dp"
        android:text="Đăng Nhập"
        app:layout_constraintBottom_toTopOf="@+id/btnThoat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbLuu" />

    <Button
        android:id="@+id/btnThoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="Thoát"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnDN"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>