<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Test 05"
        app:layout_constraintEnd_toEndOf="@+id/editHoTen"
        app:layout_constraintStart_toStartOf="@+id/editHoTen"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Họ và Tên"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnTach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Tách Họ Và Tên"
        app:layout_constraintStart_toStartOf="@+id/editHoTen"
        app:layout_constraintTop_toBottomOf="@+id/editHoTen" />

    <TextView
        android:id="@+id/txtHoTen"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="57dp"
        app:layout_constraintStart_toStartOf="@+id/btnTach"
        app:layout_constraintTop_toBottomOf="@+id/btnTach" />

</android.support.constraint.ConstraintLayout>